{% extends 'base.html.twig' %}

{% block body %}
    <h1>Step</h1>

    <table class="table table-hover text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ step.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if step.date %}{{ step.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Town</th>
                <td>{{ step.town }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ step.description }}</td>
            </tr>

        </tbody>
    </table>
    {{ form_start(delete_form) }}
    <input class="btn btn-danger" type="submit" value="Delete">
    {{ form_end(delete_form) }}
    <ul class="list-unstyled">
        <li>
            <a class="btn btn-info" href="{{ path('step_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-warning" href="{{ path('step_edit', { 'id': step.id }) }}">Edit</a>
    </ul>

{% endblock %}
