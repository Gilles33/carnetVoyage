{% extends 'base.html.twig' %}

{% block body %}
    <h1>Destination</h1>

    <table class="table table-hover text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ destination.id }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ destination.country }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if destination.start %}{{ destination.start|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if destination.end %}{{ destination.end|date('Y-m-d') }}{% endif %}</td>
            </tr>

        </tbody>
    </table>
    {{ form_start(delete_form) }}
    <input class="btn btn-danger" type="submit" value="Delete">
    {{ form_end(delete_form) }}
    <ul class="list-unstyled">
        <li>
            <a class="btn btn-info" href="{{ path('destination_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-warning" href="{{ path('destination_edit', { 'id': destination.id }) }}">Edit</a>
        </li>
    </ul>
{% endblock %}
